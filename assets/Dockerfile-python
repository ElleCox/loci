{{define "package"}}
# Install apt packages.
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y apt-utils python python-pip aria2 curl wget git sudo \
                       zlib1g-dev libreadline6-dev libbz2-dev libsqlite3-dev libssl-dev
{{range .Travis.Addons.Apt.Packages}}
RUN apt-get install -y {{.}}
{{end}}

# Update pip
RUN pip install --upgrade pip

# Install pyenv
RUN curl -L https://raw.githubusercontent.com/yyuu/pyenv-installer/master/bin/pyenv-installer | bash
{{end}}

{{define "version"}}
# Install a specific python version
ENV PYTHON_BUILD_ARIA2_OPTS "-x 10 -k 1M"
RUN PATH="/root/.pyenv/bin:$PATH" && \
    eval "$(pyenv init -)" && \
    eval "$(pyenv virtualenv-init -)" && \
    PYVERSION=$(pyenv install -l | sed "s/ //g" | grep -E "^$VERSION($|[^-])" | tail -1) && \
    pyenv install -s -v $PYVERSION && \
    pyenv local $PYVERSION
{{end}}
